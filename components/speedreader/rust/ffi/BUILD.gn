import("//brave/build/cargo.gni")
import("//brave/build/rust/config.gni")
import("//brave/test/testing.gni")

config("external_config") {
  defines = [
    "NO_CXXEXCEPTIONS=1"
  ]
}

# Run Cargo build for the Rust project
#
cargo_build("rust_lib") {
  inputs = [
    "../src/build.rs",
    "../src/Cargo.lock",
    "../src/Cargo.toml",
    "../src/src/classifier/feature_extractor.rs",
    "../src/src/classifier/mod.rs",
    "../src/src/classifier/model.c",
    "../src/src/classifier/model.rs",
    "../src/src/classifier/model.rs",
    "../src/src/lib.rs",
    "../src/src/readability/Cargo.toml",
    "../src/src/readability/src/dom.rs",
    "../src/src/readability/src/error.rs",
    "../src/src/readability/src/extractor.rs",
    "../src/src/readability/src/lib.rs",
    "../src/src/readability/src/scorer.rs",
    "../src/src/rewriter_config_builder.rs",
    "../src/src/speedreader_heuristics.rs",
    "../src/src/speedreader_streaming.rs",
    "../src/src/speedreader.rs",
    "../src/src/whitelist.rs",
    "Cargo.lock",
    "Cargo.toml",
    "charbuf.rs",
    "errors.rs",
    "lib.rs",
    "speedreader.rs",
  ]

  output = "${target_out_dir}/${cargo_lib_prefix}speedreader_ffi${cargo_lib_suffix}"
  manifest_path = "Cargo.toml"
  build_path = "$target_out_dir"
  target = rustc_target
}

# Generate FFI header from Rust source
cargo_cbindgen("ffi_header") {
  config = "cbindgen.toml"
  output = "speedreader_ffi.h"

  sources = [
    "../src/src/whitelist.rs",
    "Cargo.toml",
    "Cargo.lock",
    "cbindgen.toml",
    "charbuf.rs",
    "errors.rs",
    "lib.rs",
    "speedreader.rs",
  ]
}

# Build the FFI wrapper as a static library
static_library("speedreader_ffi") {
  public_configs = [ ":external_config" ]

  sources = [
    "speedreader.cc",
    "speedreader.h"
  ]

  deps = [
    "//base",
    ":ffi_header",
  ]

  libs = get_target_outputs(":rust_lib")
}
